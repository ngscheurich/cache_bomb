{
  "manifest_version": 2,
  "name": "CCP Buster",
  "version": "1.0",

  "description": "Cache-busts the current page.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "Cache-bust the current page."
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab"
  ]
}
